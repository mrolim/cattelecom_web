	<title>Template 1</title>

	
	<!-- EDIT the styles to fit your design-->	
	<style type="text/css">	
				
		#mypanorama{
			width:500px;
			border:1px solid #333;
		 	background-image:url('img/pattern1.png');			
		}	
		
		.panorama_titel{
			padding:10px;			
		}
		
		.shadow{	
			margin:50px;
			 -webkit-box-shadow: 0px 5px 15px 0px rgba(0, 0, 0, 0.6); 
			 -moz-box-shadow: 0px 5px 15px 0px rgba(0, 0, 0, 0.6); 
			 box-shadow: 0px 5px 15px 0px rgba(0, 0, 0, 0.6); 			
		}
		
	
	</style>
	
	<!-- Including jQuery and panorama plugin -->
	<script type="text/javascript" src="js/jquery-1.7.1.min.js"></script>
	<script type="text/javascript" src="js/jquery.panorama.min.js"></script>
	
	<script type="text/javascript">
	   
		$(document).ready(function(){
		
			//START panorama
			////all settings are optional, you can delete them or provide your values (default values are shown here)
			
			$('#mypanorama').panorama({
			        
				size         : false,    //See 'Setting the size of the panorama' in HOW_TO            
				speed        : 20,       //target speed px/sec (if negative - move to opposite direction on start, if zero - not moving at start)
				move         : 200,      //max speed px/sec on mouse move (if negative - inverted sensitivity, if zero - not sensitive)
				wheel        : 1,        //sensitivity on mouse wheel (if negative - inverted sensitivity, if zero - not sensitive)                    
				drag         : 1,        //sensitivity on drag (if negative - inverted sensitivity, if zero - not sensitive)            
				attenuation  : 4,        //attenuation koefficient (not negative number)
				fade         : 300,      //fade on image load in milliseconds (set to zero to remove fade effect)
				fps          : 60        //default fps limit
			
			}); 
			
			
			
